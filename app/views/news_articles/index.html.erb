
<div class="container text-center">
<h1>Latest News Articles</h1>

<ul class="article-list">
    <% @news_articles.each do |news_article| %>
        <li>
            <div class="index-tile">
                <img class="index-img" src="<%=news_article.img_url%>" alt="" style="width:300px;height:250px;object-fit: cover;">
            </div>
            <%= link_to news_article.title, news_article %>
        </li>
    <% end %>
    
</ul>
</div>

