<div class="container text-center">
<h1>Create New User</h1>

<% if flash[:my_errors] %>
  <% flash[:my_errors].each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.label :password%>
    <%= f.text_field :password%>

    <%= f.submit %>

<% end %>
</div>