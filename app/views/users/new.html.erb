<h1>Create New User</h1>

<% if flash[:my_errors] %>
  <% flash[:my_errors].each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :age %>
<%= f.number_field :age %>
<%= f.submit %>

<% end %>