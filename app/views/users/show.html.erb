<div class="container text-center">
<h1>User Profile</h1>

<p>Name: <%= @user.name %></p>
<p>Age: <%= @user.age %></p>
<br>
<h6><%= link_to 'Edit User', edit_user_path %></h6>
<br>
<h2>My Favorite Articles</h2>

    <% if @user.user_news_articles.empty?%>
        <p>You have no favorites</p> 
        <br>
        <p>Please visit the 'Add Article to Favorites'</p>
    <% else %>
        <% @user.user_news_articles.each do |user_news_article| %>
        <li><%= link_to user_news_article.news_article.title, news_article_path(user_news_article) %> <%= button_to "X", "/user_news_articles/#{user_news_article.id}", method: :delete %></li>
         
        <% end %> 
    <% end %>



</div>



