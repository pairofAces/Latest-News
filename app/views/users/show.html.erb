<div class="container text-center">
<h1>User Show Page</h1>

<p>Name: <%= @user.name %></p>
<p>Age: <%= @user.age %></p>

<h2>My News Articles</h2>

    <% if @user.user_news_articles.empty?%>
        <p>You have no favorites</p> 
        <br>
        <p>Please visit the 'Add Article'</p>
    <% else %>
        <% @user.user_news_articles.each do |user_news_article| %>
        <li><%= link_to user_news_article.news_article.title, news_article_path(user_news_article) %> <%= button_to "X", user_path(@user), method: :delete %></li>
         
        <% end %> 
    <% end %>

</div>



